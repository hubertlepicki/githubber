<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.amberbit.githubber"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission
      android:name="android.permission.INTERNET" />

    <application android:label="@string/app_name">
        <activity android:name="GithubberMain"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="FeedActivity" android:label="@string/app_name"/>
        <activity android:name="ReposActivity" android:label="@string/app_name"/>
        <activity android:name="OptionsActivity" android:label="@string/app_name"/>
    </application>
</manifest> 
